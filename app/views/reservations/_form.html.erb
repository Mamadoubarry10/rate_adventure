

<%= form_for @reservation do |f| %><br>
<%= f.label :ride_id %><br>
<%= f.collection_select :ride_id, Ride.all, :id, :name %><br>

<%= f.time_field :date_time, as: :time, value: f.object.try(:strftime,"%h:%h:%s %z"), class: 'form-control' %>

<%= f.date_field :date_time, as: :date, value: f.object.try(:strftime,"%m/%d/%Y"), class: 'form-control' %>


<%= f.submit %>
<% end %>