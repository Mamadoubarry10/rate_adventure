<% if flash[:my_errors] %>

    <% flash[:my_errors].each do |er| %>
         <%= er %> 
    <% end %>

<% end %>


<%= form_for @message_board do |f| %>
    <%= f.label :ride_id %><br>
    <%= f.collection_select :ride_id, Ride.all, :id, :name %><br>
    <%= f.label :rating %><br>
    <%= f.number_field :rating %><br>
    <%= f.label :comment %><br>
    <%= f.text_area :comment %><br>
    
    <%= f.submit "Submit Review!" %>
<% end %>