

<div class= "background-image">
  <h1 class= "login-h1">Welcome to Rate Adventure</h1>
</div>
<% if flash[:message] %>
   <p class="flash"> <%= flash[:message] %> </p>
<% end %>
 <div class="login" >
    <%= form_tag "/login" do  %>
    <%= label_tag :name %>
    <%= text_field_tag :name %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
<p class= "button"><%= submit_tag "Log in!" %></p>
    <% end %>
 </div>

  <p class = "new-user">New user? <%= link_to "Sign up now!", new_user_path %></p>

